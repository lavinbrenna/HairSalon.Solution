@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Edit</h2>

<h4>Edit this task: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)
  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name, new { @class = "form-control", placeholder = "Client Name", required="required"})
  @Html.LabelFor(model => model.Email)
  @Html.EditorFor(model => model.Email, new { @class = "form-control", placeholder = "Client Email Address", required="required"})
  @Html.LabelFor(model => model.Phone)
  @Html.EditorFor(model => model.Phone, new { @class = "form-control", placeholder = "Client Phone Number", required="required"})
  @Html.LabelFor(model=> model.Stylist)
  @Html.DropDownList("StylistId")
  <input type="submit" value="Save"/>
}

<p>@Html.ActionLink("Back to the list", "Index")</p>
