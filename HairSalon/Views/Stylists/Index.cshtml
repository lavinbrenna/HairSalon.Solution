@{
  Layout = "_Layout";
}
@using HairSalon.Models;

<h1>Stylists</h1>
@if(@Model.Count == 0)
{
  <h3>No Stylists have been added yet</h3>
}
else{
  @foreach (Stylist stylist in Model)
{
  <h3>@Html.ActionLink($"{stylist.Name}", "Details", new{id= stylist.StylistId})</h3>
}
<p>@Html.ActionLink("Add new client", "Create", "Clients")</p>
}
